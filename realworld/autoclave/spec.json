{
  "version": "1.0",
  "created": "2025-08-08T00:00:00Z",
  "industry": "autoclave",
  "name": "Medical Device Steam Sterilization Validation",
  "description": "Steam sterilization validation for medical devices per ISO 17665",
  "data_requirements": {
    "required_columns": ["timestamp", "temperature_celsius", "pressure_psi"],
    "optional_columns": ["steam_quality_percent", "cycle_type", "validation_probe", "fo_value", "notes"],
    "max_sample_period_s": 120,
    "allowed_gaps_s": 300,
    "min_samples": 10
  },
  "target_conditions": {
    "temperature": {
      "value": 121.0,
      "unit": "celsius",
      "tolerance": 1.0
    },
    "pressure": {
      "value": 15.0,
      "unit": "psi_gauge",
      "tolerance": 1.0
    },
    "minimum_hold_time_s": 900,
    "hysteresis_c": 2.0
  },
  "pass_criteria": {
    "hold_calculation": "continuous",
    "fo_value_minimum": 8.0,
    "pressure_maintained": true,
    "steam_quality_minimum": 85.0
  },
  "sensor_uncertainty": {
    "temperature_c": 0.5,
    "pressure_psi": 0.5
  },
  "validation_standard": "ISO 17665:2024"
}