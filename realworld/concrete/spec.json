{
  "version": "1.0",
  "created": "2025-08-08T00:00:00Z",
  "industry": "concrete",
  "name": "Concrete Curing Temperature Monitoring",
  "description": "48-hour concrete curing temperature monitoring per ASTM C31",
  "data_requirements": {
    "required_columns": ["timestamp", "temperature_celsius"],
    "optional_columns": ["humidity_percent", "ambient_temperature", "cure_method", "notes"],
    "max_sample_period_s": 1200,
    "allowed_gaps_s": 3600,
    "min_samples": 100
  },
  "target_conditions": {
    "temperature_range": {
      "min": 10.0,
      "max": 35.0,
      "unit": "celsius"
    },
    "curing_duration": {
      "minimum_hours": 48,
      "target_hours": 48
    }
  },
  "pass_criteria": {
    "temperature_compliance": "continuous",
    "minimum_curing_time": 172800,
    "temperature_uniformity": true
  },
  "sensor_uncertainty": {
    "temperature_c": 1.0
  },
  "validation_standard": "ASTM C31"
}