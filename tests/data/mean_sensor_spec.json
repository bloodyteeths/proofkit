{
  "version": "1.0",
  "job": {
    "job_id": "mean_sensor_test"
  },
  "spec": {
    "method": "PMT",
    "target_temp_C": 180.0,
    "hold_time_s": 600,
    "sensor_uncertainty_C": 2.0
  },
  "data_requirements": {
    "max_sample_period_s": 30.0,
    "allowed_gaps_s": 60.0
  },
  "sensor_selection": {
    "mode": "mean_of_set",
    "sensors": ["temp_1", "temp_2"],
    "require_at_least": 1
  },
  "logic": {
    "continuous": true,
    "max_total_dips_s": 0
  },
  "reporting": {
    "units": "C",
    "language": "en",
    "timezone": "UTC"
  }
}