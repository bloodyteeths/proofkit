    "mode": "majority_over_threshold",
    "sensors": ["sensor_1", "sensor_2", "sensor_3"],
    "require_at_least": 2
  },
  "logic": {
    "continuous": true,
    "max_total_dips_s": 0
  },
  "reporting": {
    "units": "C",
    "language": "en",
    "timezone": "UTC"
  }
}