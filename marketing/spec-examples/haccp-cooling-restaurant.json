{
  "version": "1.0",
  "job": {
    "job_id": "haccp_cooling_restaurant_service"
  },
  "spec": {
    "method": "COOLING_CURVE",
    "target_temp_C": 5.0,
    "hold_time_s": 18000,
    "temp_band_C": {
      "min": 5.0,
      "max": 57.22
    },
    "sensor_uncertainty_C": 1.0
  },
  "data_requirements": {
    "max_sample_period_s": 300.0,
    "allowed_gaps_s": 900.0
  },
  "sensor_selection": {
    "mode": "mean_of_set",
    "sensors": ["food_temp_F"],
    "require_at_least": 1
  },
  "logic": {
    "continuous": false,
    "max_total_dips_s": 1800,
    "stages": [
      {
        "name": "stage_1_rapid_cool",
        "start_temp_F": 135.0,
        "end_temp_F": 70.0,
        "max_duration_s": 6300
      },
      {
        "name": "stage_2_final_cool",
        "start_temp_F": 70.0,
        "end_temp_F": 41.0,
        "max_duration_s": 12600
      }
    ]
  },
  "preconditions": {
    "max_ramp_rate_C_per_min": 25.0,
    "max_time_to_threshold_s": 18900
  },
  "reporting": {
    "units": "F",
    "language": "en",
    "timezone": "UTC"
  }
}